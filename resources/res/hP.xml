<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView android:id="@+id/commandScroll" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/viewScroll">
        <androidx.appcompat.widget.LinearLayoutCompat android:orientation="vertical" android:id="@+id/commands" android:padding="32dp" android:layout_width="match_parent" android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatButton android:textSize="14sp" android:textStyle="bold" android:gravity="center" android:id="@+id/initialize" android:background="#b389a2" android:layout_width="match_parent" android:layout_height="56dp" android:layout_marginBottom="24dp" android:text="INITIALIZE SERVICES"/>
            <androidx.appcompat.widget.AppCompatButton android:textSize="14sp" android:textStyle="bold" android:gravity="center" android:id="@+id/buildLocationPacket" android:background="#b389a2" android:layout_width="match_parent" android:layout_height="56dp" android:layout_marginBottom="24dp" android:text="BUILD &amp; SEND LOCATION"/>
            <androidx.appcompat.widget.AppCompatButton android:textSize="14sp" android:textStyle="bold" android:gravity="center" android:id="@+id/buildMnsiPacket" android:background="#b389a2" android:layout_width="match_parent" android:layout_height="56dp" android:layout_marginBottom="24dp" android:text="BUILD &amp; SEND MNSI"/>
            <androidx.appcompat.widget.AppCompatButton android:textSize="14sp" android:textStyle="bold" android:gravity="center" android:id="@+id/sendFakeData" android:background="#b389a2" android:layout_width="match_parent" android:layout_height="56dp" android:layout_marginBottom="24dp" android:text="SEND FAKE DATA"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>
    <androidx.core.widget.NestedScrollView android:id="@+id/viewScroll" android:visibility="gone" android:layout_width="match_parent" android:layout_height="380dp" android:layout_alignParentBottom="true">
        <androidx.appcompat.widget.LinearLayoutCompat android:orientation="vertical" android:id="@+id/view" android:padding="32dp" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
